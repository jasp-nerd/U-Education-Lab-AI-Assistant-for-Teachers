{
  "manifest_version": 3,
  "name": "VU Education Lab AI Assistant for Teachers",
  "version": "3.2.0",
  "description": "An AI assistant for VU teachers to analyze web page content using a secure backend server with Google Gemini API.",
  "key": "YOUR_CHROME_EXTENSION_KEY_HERE",
  "permissions": ["activeTab", "storage", "scripting", "identity"],
  "host_permissions": [
    "https://*.azurewebsites.net/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "images/*",
        "popup.html",
        "popup.css",
        "popup.js",
        "api.js",
        "auth.js"
      ],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}

